<xml>
    <object name="FlightStatus" singleinstance="true" settings="false">
        <description>Contains major flight status information for other modules. Updated by the System module.</description>
        <field name="Armed" units="" type="ENUM" options="Disarmed,Arming,Armed" defaultvalue="Disarmed"/>
	    <!-- Note these enumerated values should be the same as ManualControlSettings -->
        <field name="FlightMode" units="" type="ENUM" options="Manual,Stabilized1,Stabilized2,Stabilized3,Autotune,AltitudeHold,VelocityControl,PositionHold"/>
        <access gcs="readonly" flight="readwrite"/>
        <telemetrygcs acked="false" updatemode="manual" period="0"/>
        <telemetryflight acked="false" updatemode="periodic" period="5000"/>
        <logging updatemode="manual" period="0"/>
    </object>
</xml>
